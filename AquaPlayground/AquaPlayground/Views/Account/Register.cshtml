@model AquaPlayground.ViewModels.RegisterViewModel

<center>
    <h2>Registration</h2>

    @if (TempData["Error"] != null)
    {
        <div class="col-md-12 alert alert-danger">
            <span><b>Sorry!</b> - @TempData["Error"] </span>
        </div>
    }

    <form method="post" asp-controller="Account" asp-action="Register">
        <div asp-validation-summary="ModelOnly" class="col-md-12 alert alert-danger"></div>
        <div>
            <label asp-for="Email"></label><br>
            <input asp-for="Email" /><br>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="UserName"></label><br>
            <input asp-for="UserName" /><br>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Password"></label><br>
            <input asp-for="Password" /><br>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="PasswordConfirm"></label><br>
            <input asp-for="PasswordConfirm" /><br>
            <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
        </div>
        <div>
            <input type="submit" value="Register"/>
        </div>
    </form>
</center>